model Papel {
  id Int @id @default(autoincrement())
  descricao String //Admin, Professor, Aluno
  usuario Usuario[]
}

model Usuario {
  cpf String @id
  nome String
  email String @unique
  senha String
  dataNascimento DateTime
  
  roles Papel[]
  questoes Questao[]
  turmasMatriculadas Turma[] @relation("alunos")
  turmasMinistradas Turma[] @relation("professor")
}

model CertoOuErrado {
  id Int @id @default(autoincrement())
  gabarito Boolean
  idQuestao Int @unique
  questao Questao @relation(fields:[idQuestao], references:[id], onDelete: Cascade) 
}

model ValorExato {
  id Int @id @default(autoincrement())
  gabarito Int
  
  idQuestao Int @unique
  questao Questao @relation(fields:[idQuestao], references:[id], onDelete: Cascade) 
}

model Questao{
  id Int @id @default(autoincrement())
  enunciado String

  cpfAutor String
  autor Usuario @relation(fields:[cpfAutor], references:[cpf])

  certoOuErrado CertoOuErrado?
  valorExato ValorExato?
  multiplaEscolha MultiplaEscolha?

  provas Prova[]
}

model Prova{
  id Int @id @default(autoincrement())
  horarioInicio DateTime
  horarioFim DateTime
  
  questoes Questao[]
  turmas Turma[]
}

model Turma{
  id Int @id @default(autoincrement())
  dataInicio DateTime @default(now())
  dataFim DateTime
  
  alunos Usuario[] @relation("alunos")
  
  cpfProfessor String
  professor Usuario @relation("professor", fields:[cpfProfessor], references:[cpf])
  
  provas Prova[]
}

model MultiplaEscolha{
  id Int @id @default(autoincrement())
  itemA String
  itemB String
  itemC String
  itemD String

  idGabarito Int
  gabarito Opcao @relation(fields:[idGabarito], references: [id])
  
  idQuestao Int @unique
  questao Questao @relation(fields:[idQuestao], references:[id], onDelete: Cascade) 
}

model Opcao {
  id Int @id @default(autoincrement())
  descricao String //A, B, C, D
  questao MultiplaEscolha[]
}